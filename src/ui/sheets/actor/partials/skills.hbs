<div class="partial-root-skills">
    {{#if (gt actorData.computedData.skills.availableSkillPoints.total 0)}}
        <section class=skill-points">
            <ul>
                {{#if (gt actorData.computedData.skills.availableSkillPoints.job_combat 0)}}
                    <li>{{actorData.computedData.skills.availableSkillPoints.job_combat}} points à placer dans les habilitées de combat ou de classe</li>
                {{/if}}
                {{#if (gt actorData.computedData.skills.availableSkillPoints.general 0)}}
                    <li>{{actorData.computedData.skills.availableSkillPoints.general}} points à placer dans les habilitées général</li>
                {{/if}}
                {{#if (gt actorData.computedData.skills.availableSkillPoints.all 0)}}
                    <li>{{actorData.computedData.skills.availableSkillPoints.all}} points à placer n'importe où (3 première case seulement)</li>
                {{/if}}
                {{#if (gt actorData.computedData.skills.availableSkillPoints.master 0)}}
                    <li>{{actorData.computedData.skills.availableSkillPoints.master}} points à placer n'importe où (possibilité de cocher les cases expertises "Maître")</li>
                {{/if}}
                {{#if (gt actorData.computedData.skills.availableSkillPoints.prodigy 0)}}
                    <li>{{actorData.computedData.skills.availableSkillPoints.prodigy}} points à placer n'importe où, incluant les cases expertises "Maître" ou "Prodige"</li>
                {{/if}}
            </ul>
        </section>
    {{/if}}

    <div class="skill-list">
        <section class="sheet-jobs-skills">
            {{#each jobs.base as | job | }}
                <section class="sheet-job-skills">
                    <h4>{{job.name}}</h4>
                    {{#each2 ../skillsByCategories @key as | skill | }}
                        <span class="sheet-skill">
                            <span class="label-with-tooltip-description" data-skill="{{concat2 @../key '.' @key}}">
                                {{skill.name}}
                                <div class="description">
                                    {{#if skill.icon}}
                                        <img class="icon" src="{{skill.icon}}">
                                    {{/if}}
                                    <span>
                                        <strong>{{skill.name}}</strong> {{markdown skill.description}}
                                    </span>
                                </div>
                            </span>
                            {{skill-value skill ../../actorData @../key @key}}
                        </span>
                    {{/each2}}
                </section>
                <div class="separator"></div>
            {{/each}}
        </section>

        <section class="sheet-combat-skills">
            <h4>Combat</h4>
            {{#each2 skillsByCategories 'combat' as | skill | }}
                <span class="sheet-skill">
                    <span class="label-with-tooltip-description" data-skill="{{concat2 'combat.' @key}}">
                        {{skill.name}}
                        <div class="description">
                            {{#if skill.icon}}
                                <img class="icon" src="{{skill.icon}}">
                            {{/if}}
                            <span>
                                <strong>{{skill.name}}</strong> {{markdown skill.description}}
                            </span>
                        </div>
                    </span>
                    {{skill-value skill ../actorData 'combat' @key}}
                </span>
            {{/each2}}
        </section>

        <section class="sheet-misc-skills">
            <h4>Général</h4>
            {{#each2 skillsByCategories 'general' as | skill | }}
                <span class="sheet-skill">
                    <span class="label-with-tooltip-description" data-skill="{{concat2 'general.' @key}}">
                        {{skill.name}}
                        <div class="description">
                            {{#if skill.icon}}
                                <img class="icon" src="{{skill.icon}}">
                            {{/if}}
                            <span>
                                <strong>{{skill.name}}</strong> {{markdown skill.description}}
                            </span>
                        </div>
                    </span>
                    {{skill-value skill ../actorData 'general' @key}}
                </span>
                {{#ifIsNthItem nth=4}}
                    <div class="separator"></div>
                {{/ifIsNthItem}}
            {{/each2}}
        </section>

        <section class="sheet-specialities">
            <h4>Spécialités</h4>
            <div>
                {{#each actorData.computedData.speciality.knownSpecialities as |speciality|}}
                    <div class="speciality">
                        <img class="icon" src="{{speciality.icon}}" />
                        <div class="label label-with-tooltip-description" data-speciality="{{speciality.id}}">
                            {{speciality.name}}
                            <div class="description">
                                <span>
                                    <strong>{{speciality.name}}</strong> {{markdown speciality.description}}
                                </span>
                            </div>
                        </div>
                        <div class="cost">Coût: 1 point de mana</div>
                        <div class="action">
                            <button data-action="useSpeciality" data-speciality-id="{{speciality.id}}">Utiliser</button>
                        </div>
                    </div>
                {{/each}}
            </div>
            {{#if actorData.computedData.speciality.canSelectNewSpeciality}}
                <button data-action="selectSpeciality">Choisir une spécialité</button>
            {{/if}}
        </section>
    </div>
</div>

