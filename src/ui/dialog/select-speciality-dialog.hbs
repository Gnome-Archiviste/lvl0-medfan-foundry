<div class="select-speciality-dialog">
    <h2>Choisir une spécialité</h2>
    {{#each specialitiesByIds as |speciality|}}
        <div class="speciality">
            <img class="icon" src="{{speciality.icon}}">
            <h3 class="header">{{speciality.name}}</h3>
            <p class="description">
                {{speciality.description}}
            </p>
            <button class="action" data-action="selectSpeciality" data-speciality-name="{{@key}}">Choisir</button>
        </div>
        <div class="separator"></div>
    {{/each}}
    <div>
        <button data-dialog-action="cancel">Fermer</button>
    </div>
</div>
