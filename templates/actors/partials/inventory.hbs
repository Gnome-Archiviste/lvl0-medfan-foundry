<div class="partial-root-inventory">
    <div class="item-line">
        <div class="equiped"><b>Équipé</b></div>
        <div class="name"><b>Nom</b></div>
        <div class="clutter"><b>Encombrement</b></div>
        <div class="quantity"><b>Qtt</b></div>
    </div>
    {{#each items as | item |}}
        <div class="item-line" data-item-id="{{item._id}}">
            <div class="equiped">
                <input type="checkbox" {{checked item.data.equiped}} data-equip-item-checkbox="{{item._id}}">
            </div>
            <div class="icon">
                <img src="{{item.img}}"/>
            </div>
            <div class="quantity">
                {{#if item.data.quantifiable}}
                    <input type="text" value="{{item.data.quantity}}" data-update-item-quantity="{{item._id}}"/>
                {{/if}}
            </div>
            <div class="name">
                <div>
                    <span class="title">
                        {{item.name}}
                    </span>
                    {{#if item.data.damage}}
                        <span class="damage">
                            Dégâts: {{item.data.damage}}
                        </span>
                    {{/if}}
                </div>
                <div>
                    {{#if item.data.description}}
                        <span class="description">
                            {{item.data.description}}
                        </span>
                    {{/if}}
                </div>
            </div>
            <div class="clutter">
                {{item.data.clutter}}
            </div>
            <div class="actions item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </div>
    {{/each}}
</div>
